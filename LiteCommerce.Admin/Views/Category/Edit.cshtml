@model LiteCommerce.DomainModels.Category


<div class="container-fluid">
    <form method="post" action="~/Category/Save" id="myform">
        <div class="form-group">
            @Html.ValidationSummary()
        </div>

        @Html.HiddenFor(m => m.CategoryID)
        <div class="form-group">
            <label>Tên loại hàng:</label>
            @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", @autofocus = "autofocus" })
            @Html.ValidationMessageFor(m => m.CategoryName)

            @*<input type="text" class="form-control" name="CategoryName" id="CategoryName" autofocus>*@
        </div>
        <div class="form-group">
            <label>Mô tả</label>
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Description)

            @*<input type="text" class="form-control" name="Description" id="Description">*@
        </div>
        <div class="form-group">
            <label>Danh mục cha:</label>

            @Html.TextBoxFor(m => m.ParentCategoryId, new { @class = "form-control" })
            @*<select class="form-control" name="ParentCategoryId" id="ParentCategoryId">*@
            @*<option>Nước</option>
                <option>Đồ ăn</option>
                <option>Ăn vặt</option>*@
            </select>
        </div>

        <div class="row">
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Lưu dữ liệu
                </button>
            </div>
            <div class="col-md-6 text-right">
                <a href="~/Category/Index" class="btn btn-warning">
                    <i class="fa fa-window-close"></i> Bỏ qua
                </a>
            </div>
        </div>
    </form>
</div>

@*
    script validate
*@
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="~/Scripts/category/validatecategory.js"></script>

}