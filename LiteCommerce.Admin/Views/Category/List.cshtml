@model LiteCommerce.Admin.Models.CategoryPaginationQueryResult
@{

    Layout = null;
}

<div class="text-left">
    <p>Có tất cả <strong>@Model.RowCount</strong> nhà cung cấp. Bạn đang ở trang <strong>@Model.Page</strong> trên tổng số <strong>@Model.PageCount</strong> trang.</p>
</div>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Tên danh mục</th>
            <th>Mô tả</th>
            <th class="text-right">
                <a href="~/Category/Add" class="btn btn-xs btn-primary" onclick="make(event)">
                    <i class="fa fa-plus"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td class="text-right">
                    <a href="~/Category/Edit/@item.CategoryID" class="btn btn-xs btn-info">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="~/Category/Delete/@item.CategoryID" class="btn btn-xs btn-danger">
                        <i class="fa fa-remove"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <ul class="pagination">
        <li><a href="#">&lt;&lt;</a></li>
        @for (int i = 1; i <= Model.PageCount; ++i)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="getProducts(@i)">@i</a></li>

            }

        }
        <li><a href="#">&gt;&gt;</a></li>
    </ul>
</div>

     