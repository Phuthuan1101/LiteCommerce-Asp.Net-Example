@model LiteCommerce.DomainModels.Employee

<form method="post" action="~/Employee/Save">
    @Html.HiddenFor(m => m.EmployeeID)

    <div class="form-group avatar">
        <div class="text-center">
            <img src="@Model.Photo" class="img-circle profile-avatar" style="width: 180px" alt="User avatar">
            <br />
            <label>Ảnh </label>
            @Html.TextBoxFor(m => m.Photo, new { @class = "form-control", @name = "Photo" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Họ:</label>
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @autofocus = "autofocus" ,@name="LastName"})
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Tên:</label>
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Ngày sinh:</label>
                @Html.EditorFor(m => m.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
                @* @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control" ,@type="date" })*@

            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Email:</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control",@type="email"})
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Ghi chú:</label>
        @Html.TextAreaFor(m => m.Notes, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @Value= "e10adc3949ba59abbe56e057f20f883e", @type="hidden"})
    </div>

    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Lưu dữ liệu
            </button>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/Product/Index" class="btn btn-warning">
                <i class="fa fa-window-close"></i> Bỏ qua
            </a>
        </div>
    </div>
</form>