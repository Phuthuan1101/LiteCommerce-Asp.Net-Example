@model LiteCommerce.Admin.Models.EmployeePaginationQueryResult
@{ 
    Layout = null;
}

<div class="text-left">
    <p>Có tất cả <strong>@Model.RowCount</strong> nhà cung cấp. Bạn đang ở trang <strong>@Model.Page</strong> trên tổng số <strong>@Model.PageCount</strong> trang.</p>
</div>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Họ</th>
            <th>Tên</th>
            <th>Ngày sinh</th>
            <th>Ảnh</th>
            <th>Email</th>
            <th>Ghi chú</th>
            <th class="text-right">
                <a href="~/Employee/Add" class="btn btn-xs btn-primary">
                    <i class="fa fa-plus"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.BirthDate
                </td>
                <td>
                    <img src=" @item.Photo" class="img-lg"  />
                </td>
                <td>
                    @item.Email
                </td>
                <td class="text-truncate" style="overflow: hidden; white-space: nowrap; text-overflow: ellipsis; max-width: 150px">
                    @item.Notes
                </td>
                <td class="text-right">
                    <a href="~/Employee/Edit/@item.EmployeeID" class="btn btn-xs btn-info">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="~/Employee/Delete/@item.EmployeeID" class="btn btn-xs btn-danger">
                        <i class="fa fa-remove"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <ul class="pagination">
        <li><a href="#">&lt;&lt;</a></li>
        @for (int i = 1; i <= Model.PageCount; ++i)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="getProducts(@i)">@i</a></li>

            }

        }
        <li><a href="#">&gt;&gt;</a></li>
    </ul>
</div>