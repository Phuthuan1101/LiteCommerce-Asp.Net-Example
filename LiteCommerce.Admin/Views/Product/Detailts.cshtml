@model LiteCommerce.DomainModels.ProductEx
@{
    ViewBag.Title = "Chi tiết thông tin mặt hàng";

}



@Html.HiddenFor(m => m.ProductID)

<div class="form-group">
    <label>Tên hàng:</label>
    @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", @autofocus = "autofocus", @disabled = "true" })

</div>
<div class="form-group">
    <label>Ảnh :</label>
    @Html.TextBoxFor(m => m.Photo, new { @class = "form-control", @disabled = "true" })

</div>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label>Tên loại hàng:</label>

            @Html.DropDownListFor(m => m.CategoryID, SelectListHelper.Categories(), new { @class = "form-control", @disabled = "true" })

        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Tên nhà cung cấp:</label>

            @Html.DropDownListFor(m => m.SupplierID, SelectListHelper.Suppliers(), new { @class = "form-control", @disabled = "true" })
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label>Đơn vị tính:</label>
            @Html.TextBoxFor(m => m.Unit, new { @class = "form-control", @disabled = "true" })

        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label>Giá hàng:</label>
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @disabled = "true" })

        </div>
    </div>

</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            @*Hiển thị danh sách thuộc tính để xem, sửa, xóa*@
            <div style="margin:15px auto; border:1px solid #ffff;">

                <table class="table table-bordered">
                    <thead>
                        <tr>

                            <th>Tên thuộc tính</th>
                            <th>Giá trị</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Attributes)
                        {
                            <tr>

                                <td>@item.AttributeName</td>
                                <td>@item.AttributeValue</td>

                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
        @*Hiển thị danh sách ảnh của mặt hàng để xem, sửa xóa*@
        <div class="col-md-6">
            <div style="margin:13px auto; border:1px solid #ffff;">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>Mô tả</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Galleries)
                        {
                            <tr>
                                <td><img src="@item.Photo" style="width:100px" /></td>
                                <td>@item.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="text-right">
            <div class="col-md-6 text-left">
                <a href="~/Product/Index" class="btn btn-warning">
                    <i class="fa fa-arrow-left"></i> Trở lại
                </a>
            </div>
        </div>
    </div>
</div>

