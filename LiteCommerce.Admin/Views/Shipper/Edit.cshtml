
@model LiteCommerce.DomainModels.Shipper


<div class="container-fluid">
    <form method="post" action="~/Shipper/Save" id="myform">
        <div class="form-group">
            @Html.ValidationSummary()
        </div>
        @Html.HiddenFor(m => m.ShipperID)
        <div class="form-group">
            <label>Tên nhà vận chuyển:</label>
            @* <input type="text" class="form-control" name="ShipperName" id="ShipperName" autofocus>*@

            @Html.TextBoxFor(m => m.ShipperName, new { @class = "form-control", @autofocus = "autofocus" })
            @Html.ValidationMessageFor(m => m.ShipperName)
        </div>
        <div class="form-group">
            <label>Số điện thoại:</label>
            @*<input type="text" class="form-control" name="Phone" id="Phone">*@

            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Phone)
        </div>

        <div class="row">
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Lưu dữ liệu
                </button>
            </div>
            <div class="col-md-6 text-right">
                <a href="~/Shipper/Index" class="btn btn-warning">
                    <i class="fa fa-window-close"></i> Bỏ qua
                </a>
            </div>
        </div>
    </form>
</div>
@*
    script validate
*@
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>    
    <script src="~/Scripts/shipper/validateShipper.js"></script>

}